<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_rl_background">

    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
               android:background="@drawable/login_ll_background"
               android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"
    />

    <LinearLayout android:layout_width="346dp" android:layout_height="335dp"
                  android:background="@drawable/login_ll_dialog_background"
                  android:id="@+id/iv_dialog_background"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="60dp"
                  android:orientation="vertical"
                  >

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/login_iv_account_number"
                  android:layout_marginTop="19dp"
                  android:layout_marginLeft="14dp"
                  android:text="账户"
                  android:textSize="16dp"/>
        <EditText android:layout_width="314dp" android:layout_height="48dp"
                  android:background="@drawable/login_et_number"
                  android:layout_marginTop="16dp"
                  android:layout_marginLeft="14dp"
                  android:id="@+id/et_number"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/login_tv_password_icon"
                  android:layout_marginTop="34dp"
                  android:layout_marginLeft="14dp"
                  android:text="密码"
                  android:textSize="16dp"/>
        <EditText android:layout_width="314dp" android:layout_height="48dp"
                  android:id="@+id/et_password"
                  android:background="@drawable/login_et_number"
                  android:layout_marginTop="16dp"
                  android:layout_marginLeft="14dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="260dp"
                  android:textColor="#FF21D9D9"
                  android:text="找回密码"
                  android:textSize="16dp"/>
        <ImageButton android:layout_width="314dp" android:layout_height="48dp"
                     android:id="@+id/bnt_login"
                     android:layout_marginTop="17dp"
                     android:layout_gravity="center"
                     android:background="@drawable/login_bnt"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentBottom="true"
                  android:orientation="horizontal"
                  android:layout_marginBottom="25dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="还没有注册账号? "
                  android:textColor="@color/white"
                  android:textSize="16dp"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="注 册"
                  android:background="?android:attr/selectableItemBackground"
                  android:id="@+id/tv_registered"
                  android:textColor="#4CAF50"
                  android:textSize="16dp"
        />
    </LinearLayout>


</RelativeLayout>