<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.example.musiccrawler">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name="com.example.musiccrawler.App"
    android:networkSecurityConfig="@xml/network_security_config"
    android:requestLegacyExternalStorage="true"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.乐好听"
    tools:targetApi="n"
    >

    <activity android:name="com.example.musiccrawler.playInterface.activity.PlayActivity"
      android:theme="@style/PlayTheme"

     >

    </activity>
    <activity
      android:name="com.example.musiccrawler.searchFor.SearchActivity"
      android:theme="@style/SearchTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name="com.example.musiccrawler.loginRegistered.RegisteredActivity"
      android:theme="@style/TranslucentTheme">
    </activity>
    <activity
      android:name="com.example.musiccrawler.loginRegistered.LoginActivity"
      android:theme="@style/TranslucentTheme">
    </activity>
    <activity android:name="com.example.musiccrawler.MainActivity">
    </activity>
    <service
      android:enabled="true"
      android:exported="true"
      android:name="com.example.musiccrawler.musicService.service.MusicService">
    </service>

    <provider
      android:authorities="${applicationId}.log-trojan"
      android:exported="false"
      android:initOrder="1000"
      android:multiprocess="true"
      android:name="com.example.musiccrawler.base.log.LogTrojanProvider">
    </provider>


  </application>

  <uses-permission
    android:name="android.permission.WRITE_EXTERNAL_STORAGE"
    tools:ignore="ScopedStorage"/>
  <uses-permission android:name="android.permission.INTERNET"/>

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

</manifest>